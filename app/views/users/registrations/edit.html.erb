<div class="col-6 offset-3 col-sm-4 offset-sm-4">
  <h2 class="h3 mb-3 fw-normal">Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-2' %>
    <%= f.label :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mb-2' %>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control m-2' %>
    <%= f.label :password_confirmation %><br />
  </div>

  <div class="form-floating">
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control m-2' %>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary m-2' %>
  </div>
<% end %>

<h3 mb-3 col-8 offset-2 col-sm-6 offset-sm-3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: 'btn btn-primary m-2' %></p>

<%= link_to "Back", :back %>
</div>