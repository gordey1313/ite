<main class="form-signin col-6 offset-3 col-sm-4 offset-sm-4">
<h2 class="h3 mb-3 fw-normal">Увійти</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, type: "email", class: "form-control", id:"floatingInput", placeholder:"name@example.com" %>
    <%= f.label :email, for: "floatingInput" %>
  </div>
  <div class="form-floating">
    <%= f.password_field :password, type:"password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
    <%= f.label :password, for:"floatingPassword" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class:"form-check-input", id:"flexCheckDefault" %>
      <%= f.label :remember_me, class:"form-check-label", for:"flexCheckDefault"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary w-100 py-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>